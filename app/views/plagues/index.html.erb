<div class="content">
<p id="notice"><%= notice %></p>

<h1>Plagas</h1>

    <% @plagues.each do |plague| %>
    <div class="plant_container">
      <div class="info">
        <h2><%= plague.name %> </h2>
        <p><%= plague.desc %></p>
        <%= link_to 'Ver', plague, :class => "show" %>
      </div>
    </div>
    <hr>
  <% end %>

<br>

  <% if !current_user.nil? && current_user.isadmin %>
    <%= link_to 'Agregar Plaga', new_plague_path, :class => "add" %>
    <% end %>
</div>