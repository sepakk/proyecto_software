<div class="form_container">
  <h2>Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, :placeholder => "Nombre", :autofocus => true %>
    </div>

    <div class="field">
      <%= f.email_field :email, :placeholder => 'Email' %>
    </div>


    <div class="field field_avatar">
      <%= f.label :avatar, "Foto:" %>
      <%= f.file_field :avatar, :class => "inputfile" %>
      <label for="user_avatar" class="upload">Seleccionar Archivo</label>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Contraseña ( '+@minimum_password_length.to_s + ' caracteres mínimo)' %>
      <% else %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Contraseña' %>
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirmar Contraseña' %>
    </div>



    <div class="actions">
      <%= f.submit "Registrarse" %>
    </div>
  <% end %>
  <div class="links_container">
    <%= render "devise/shared/links" %>
  </div>
</div>